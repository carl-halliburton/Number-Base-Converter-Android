<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.halliburtongmail.j.carl.numberbaseconverter.Home"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fieldInput"
            android:textSize="@dimen/hint_text_size"
            android:hint="@string/editText_hint_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="top"
            android:focusable="false" />

        <EditText
            android:id="@+id/fieldOutput"
            android:textSize="@dimen/hint_text_size"
            android:hint="@string/editText_hint_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="top"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
         </LinearLayout>

        <Button
            android:id="@+id/btnConvert"
            android:text="@string/btn_submit"
            android:textSize="@dimen/hint_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start" />

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="6"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:textStyle="bold"
            tools:context=".GridXMLActivity" >

            <ImageButton
                android:id="@+id/btnBSpace"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_backspace_black" />

            <ImageButton
                android:id="@+id/btnDecimal"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_decimal" />

            <ImageButton
                android:id="@+id/btnZero"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_zero" />

            <ImageButton
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_one" />

            <ImageButton
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_two" />

            <ImageButton
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_three" />

            <ImageButton
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitStart"
                android:src="@drawable/ic_action_four" />

        </GridLayout>
    </LinearLayout>
</ScrollView>